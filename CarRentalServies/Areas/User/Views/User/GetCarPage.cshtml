@using CarRentalServies.Areas.User.Models
@{
    Layout = "~/Areas/User/Views/shared/User_Layout.cshtml";
    CarModel carModel = new CarModel();
    int CityID = Convert.ToInt32(TempData["CityID"]);
}

<div class="card" style="position: relative; text-align: center; color: white;">
    <img src="~/img/bg2.jpg" style="height:800px; filter: blur(2px); -webkit-filter: blur(2px); background-color: rgba(0,0,0, 0.9); box-shadow:rgba(0,0,0,0,0.3)">
    <div class="centered" style="position: absolute; top: 30%; left: 50%; transform: translate(-50%, -50%); font-size:50px; color:rgb(69, 69, 71); font-weight:bold">
        Rent a car in @TempData["CityName"]
    </div>
    <div class="centered" style="position: absolute; top: 40%; left: 50%; transform: translate(-50%, -50%); font-size:30px; color:rgb(69, 69, 71); font-weight:bold">
        Book your ride now!
    </div>
    <div class="card" style="position: absolute; top: 60%; left: 50%; transform: translate(-50%, -50%);">

        <form method="post" asp-controller="User" asp-action="CarByCityIDFromDateToDate" asp-area="User" asp-route-CityID="@CityID">
            <div class="card-header" style="background-color: #edf2ff">
                <div class="d-flex justify-content-between align-items-center row ">
                    <div class="col-md-4 product_status">
                        <label for="ecommerce-product-name" class="fw-bold mb-1 ms-1">From Date</label>
                        <input type="datetime-local" placeholder="FromDate" class="form-control" id="ecommerce-product-name" name="FROMDATE" />
                    </div>
                    <div class="col-md-4 product_category">
                        <label for="ecommerce-product-name" class="fw-bold mb-1 ms-1">To Date</label>
                        <input type="datetime-local" placeholder="ToDate" class="form-control" id="ecommerce-product-name" name="TODATE" />
                    </div>
                    <div class="col-md-4 product_stock mt-4">
                        <button type="submit" class="btn btn-success waves-effect waves-light text-white">
                            Get Car
                        </button>
                    </div>
                </div>
            </div>
        </form>
        


    </div>
</div>